{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "nixpacks",
      "buildCommand": "npm run build"
      },
    "deploy": {
      "startCommand": "./deploy-app.sh",
      "healthcheckPath": "/",
      "healthcheckTimeout": 100,
      "restartPolicyType": "never"
      }
  }